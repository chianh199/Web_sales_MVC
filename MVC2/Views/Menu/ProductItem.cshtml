@model MVC2.ViewModels.ProductVMs

@foreach (var product in Model.ds)
{
    <div class="col-md-6 col-lg-6 col-xl-4">
        <div class="rounded position-relative fruite-item">
            <div class="fruite-img">
                <a asp-controller="Menu" asp-action="Detail" asp-route-id="@product.Id">
                    <img src="~/img/@product.image" class="img-fluid w-100 rounded-top" alt="@product.Name">
                    <input type="hidden" id="idProduct" value="@product.Id" />
                </a>
            </div>
            <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@product.catelog</div>
            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                <a asp-controller="Menu" asp-action="Detail" asp-route-id="@product.Id">
                    <h4>@product.Name</h4>
                    <input type="hidden" id="namesp" value="@product.Name"/>
                </a>
                <p>@product.Describe</p>
                <div class="d-flex justify-content-between flex-lg-wrap">
                    <p class="text-dark fs-5 fw-bold mb-0">@product.Price</p>
                    @* <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i>Order</a> *@
                    <a id="btnadd" onclick="Order()" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i>Order</a>
                </div>
            </div>
        </div>
    </div>
}



<div class="col-12">
    <div class="pagination d-flex justify-content-center mt-5">
        @if (Model.CurrentPage > 1)
        {
            <a class="rounded" href="/Menu/Index?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@(Model.CurrentPage-1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
            </a>       
        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.CurrentPage)
            {
                <a class="active rounded"href="/Menu/Index?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@i">@i</a>                
            }
            else
            {
                <a class="rounded" href="/Menu/Index?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@i">@i</a>                
            }
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a class="rounded" href="/Menu/Index?term=@Model.Term&orderBy=@Model.OrderBy&currentPage=@(Model.CurrentPage+1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
            </a>           
        }       
    </div>
