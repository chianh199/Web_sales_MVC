@model IEnumerable<MVC2.ViewModels.CartItem>

@foreach (var item in Model)
{
    @if (item.user.Equals(Context.User.Identity.Name))
    {
        <tr>
            <th scope="row">
                <div class="d-flex align-items-center">
                    <img src="~/img/@item.Image" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                </div>
            </th>
            <td>
                <a asp-action="Detail" asp-controller="Menu" asp-route-id="@item.Id">
                    <p class="mb-0 mt-4">@item.Name</p>
                    <input type="hidden" id="idItem" value="@item.Id" />
                </a>

            </td>
            <td>
                <p class="mb-0 mt-4">@item.Price</p>
            </td>
            <td>
                <div class="input-group quantity mt-4" style="width: 100px;">
                    <div class="input-group-btn">
                        <button onclick="minus()" id="min" class="btn btn-sm btn-minus rounded-circle bg-light border">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <input type="text" class="form-control form-control-sm text-center border-0" value="@item.SoLuong">
                    <div class="input-group-btn">
                        <button id="max" onclick="plus()" class="btn btn-sm btn-plus rounded-circle bg-light border">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
            </td>
            <td>
                <p class="mb-0 mt-4">@item.ThanhTien</p>
            </td>
            <td>
                <a onclick="remove()" class="btn btn-md rounded-circle bg-light border mt-4">
                    <i class="fa fa-times text-danger"></i>
                </a>
            </td>

        </tr>
    }
}
