@model MVC2.ViewModels.RegisterVM
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    
</div>
<!-- Single Page Header End -->
<div class="container-fluid py-5">
    <div class="container py-5">
        
        <form asp-action="DangKy" asp-controller="KhachHang">
            <div class="row justify-content-center g-5">
                <div class="col-md-12 col-lg-6 col-xl-7 ">
                    <h2>REGISTER FOR AN ACCOUNT</h2>
                    <div class="row">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Fullname" class="form-label my-3">FullName<sup>*</sup></label>
                            <input asp-for="@Model.Fullname" type="text" class="form-control">
                            <span asp-validation-for="@Model.Fullname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Position" class="form-label my-3">Position<sup>*</sup></label>
                            <input asp-for="@Model.Position" type="text" class="form-control">
                            <span asp-validation-for="@Model.Position" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Email" class="form-label my-3">Email Address<sup>*</sup></label>
                            <input asp-for="@Model.Email" type="text" class="form-control">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="row">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Phone" class="form-label my-3">Phone<sup>*</sup></label>
                            <input asp-for="@Model.Phone" type="text" class="form-control">
                            <span asp-validation-for="@Model.Phone" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="row">
                        <div class="form-item w-100">
                            <label asp-for="@Model.Pwd" class="form-label my-3">Password<sup>*</sup></label>
                            <input asp-for="@Model.Pwd" type="text" class="form-control">
                            <span asp-validation-for="@Model.Pwd" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row g-4 text-center pt-4">
                        <div class="col-md-4 ">
                            <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">REGISTER</button>
                        </div>
                    </div>
                </div>
            </div>                                            
        </form>
    </div>
</div>        